#!/bin/bash

## Created By Aditya Shakya

MENU="$(rofi -config ~/.config/rofi/themes/config.simple -sep "|" -dmenu -i -p 'System' -width 12 -hide-scrollbar -line-padding 4 -padding 20 -lines 4 <<< "ï‚œ Lock|ï‚‹ Logout|ðŸ” Reboot|ðŸ”Œ Shutdown")"
            case "$MENU" in
                *Lock) i3lockblur ;;
                *Logout) openbox --exit ;;
                *Reboot) systemctl reboot ;;
                *Shutdown) systemctl -i poweroff
            esac
